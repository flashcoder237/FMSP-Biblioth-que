{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "lib": ["ES2020"],
    "noImplicitAny": true,
    "strictNullChecks": true
  },
  "include": [
    "src/main.ts",
    "src/preload.ts", 
    "src/services/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/renderer/**/*"
  ]
}