# Configuration d'environnement pour l'application Bibliothèque
# Copiez ce fichier vers .env et configurez vos valeurs

# Environnement d'exécution
NODE_ENV=development

# Configuration Supabase
SUPABASE_URL=https://votre-projet.supabase.co
SUPABASE_KEY=votre_cle_supabase_ici

# Configuration de base de données locale
DB_NAME=bibliotheque.db

# Configuration de sécurité
SESSION_TIMEOUT=1800000
MAX_LOGIN_ATTEMPTS=5

# Configuration de développement
DEBUG=true
LOG_LEVEL=debug

# Configuration de sauvegarde
BACKUP_INTERVAL=86400000

# Configuration CORS (pour développement)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Clé de chiffrement pour données sensibles (générez une clé forte)
ENCRYPTION_KEY=votre_cle_de_chiffrement_32_caracteres

# Configuration des uploads
MAX_FILE_SIZE=10485760

# Configuration email (optionnel pour notifications)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=

# Configuration de l'institution par défaut
DEFAULT_INSTITUTION_NAME=Ma Bibliothèque
DEFAULT_INSTITUTION_EMAIL=contact@mabiblio.org