{
  "name": "bibliotheque-app",
  "version": "1.0.0",
  "description": "Application de gestion de bibliothèque",
  "main": "dist/main.js",
  "scripts": {
    "start": "electron dist/main.js",
    "dev": "npm run build && electron dist/main.js",
    "build": "npm run build:main && npm run build:preload && npm run build:renderer",
    "build:main": "webpack --config-name=main",
    "build:preload": "webpack --config-name=preload", 
    "build:renderer": "webpack --config-name=renderer",
    "build:all": "webpack",
    "clean": "rimraf dist",
    "watch": "webpack --watch",
    "watch:main": "webpack --config-name=main --watch",
    "watch:preload": "webpack --config-name=preload --watch",
    "watch:renderer": "webpack --config-name=renderer --watch",
    "package": "npm run build && electron-builder",
    "rebuild": "electron-rebuild -f -w sqlite3",
    "postinstall": "electron-builder install-app-deps"
  },
  "devDependencies": {
    "@babel/core": "^7.28.0",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-private-methods": "^7.18.6",
    "@babel/preset-env": "^7.28.0",
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@types/archiver": "^6.0.3",
    "@types/estree": "^1.0.8",
    "@types/extract-zip": "^2.0.0",
    "@types/http-cache-semantics": "^4.0.4",
    "@types/json-schema": "^7.0.15",
    "@types/ms": "^0.7.34",
    "@types/node": "^20.19.9",
    "@types/prop-types": "^15.7.15",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/sqlite3": "^3.1.11",
    "@types/yauzl": "^2.10.3",
    "babel-loader": "^10.0.0",
    "concurrently": "^8.2.0",
    "css-loader": "^6.8.1",
    "electron": "^37.2.3",
    "electron-builder": "^24.6.3",
    "electron-rebuild": "^3.2.9",
    "html-webpack-plugin": "^5.5.3",
    "rimraf": "^5.0.10",
    "style-loader": "^3.3.3",
    "ts-loader": "^9.4.4",
    "typescript": "^5.1.6",
    "wait-on": "^7.0.1",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.52.0",
    "archiver": "^7.0.1",
    "dotenv": "^17.2.0",
    "extract-zip": "^2.0.1",
    "lucide-react": "^0.263.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sqlite3": "^5.1.7"
  },
  "build": {
    "appId": "com.bibliotheque.app",
    "productName": "Bibliothèque",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*"
    ],
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}